<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	   	android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
	    android:background="@drawable/list_item_bg"
	    android:orientation="vertical" >
	
	    <RelativeLayout 
	        android:id="@+id/header"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	    
		    <TextView
		        android:id="@+id/tv_title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:paddingLeft="5dp"
		        android:text="红色钱包" 
		        android:textSize="20sp"
		        android:textColor="@android:color/black">
		    </TextView>
	        
	    </RelativeLayout>
	    
	    <TextView
	        android:id="@+id/tv_describe"
	        android:layout_marginTop="10dp"
	        android:text="周三早上丢失了红色钱包，在食堂二楼"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/header"
	        android:textSize="16dp" 
	        android:paddingLeft="5dp"
	        android:minLines="1"
	        android:maxLines="4"  
	        >
	    </TextView>
	
	    <TextView
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_describe"
	        android:layout_marginTop="15dp"
	        android:paddingLeft="5dp"
	        android:text="20130240122"
	        android:textSize="12sp" >
	    </TextView>

	    <TextView
	        android:id="@+id/tv_photo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignRight="@+id/tv_describe"
	        android:layout_marginBottom="16dp"
	        android:layout_marginRight="23dp"
	        android:background="@android:color/holo_green_light"
	        android:drawableLeft="@drawable/icon_photo"
	        android:drawablePadding="5dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:paddingTop="3dp"
	        android:text="138024249542"
	        android:textSize="12sp" />
	
	</RelativeLayout>
</FrameLayout><!-- From: file:/F:/ANDROID_PROJECT/校园通/校园通/src/main/res/layout/lost_found_item.xml -->